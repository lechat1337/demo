        </problemBenchmarks>

    </inheritedSolverBenchmark>

    <solverBenchmark>
        <name>taboo</name>
        <solver>
            <localSearch>
                <localSearchType>TABU_SEARCH</localSearchType>
            </localSearch>
        </solver>
    </solverBenchmark>

    <solverBenchmark>
        <name>hill climbing</name>
        <solver>
            <localSearch>
                <localSearchType>HILL_CLIMBING</localSearchType>
            </localSearch>
        </solver>
    </solverBenchmark>

